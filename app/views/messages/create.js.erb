App.main.alert('<%= j(render("shared/alert", message: "Your update to <b>#{student_name_for_message(@message)}</b> has been sent")) %>');

$('.no_messages').remove();

$('#accessible_messages .messages').prepend('<%= j(render @message) %>');

$('#user_<%= @message.user_id %>_all_messages .messages').prepend('<%= j(render @message) %>');

$('#user_<%= @message.user_id %>_unchecked_messages .messages').prepend('<%= j(render @message) %>');

<% if @message.individual? %>
  $('#student_<%= @message.students.first.id %>_all_messages .messages').prepend('<%= j(render @message) %>');

  $('#student_<%= @message.students.first.id %>_unchecked_messages .messages').prepend('<%= j(render @message) %>');
<% end %>