<Say>This is <%= @parent.school.name %> updates.</Say>

<% if @parent.deliveries.unsuccessful.count > 0 %>
  <Say>You have

  <% @parent.user_grouped_deliveries.each do |user, deliveries| %>
    <%= deliveries.count %> new <%= deliveries.count == 1 ? "update" : "updates" %> from <%= user.professional_name %>
    <%= ", and " unless user == @parent.user_grouped_deliveries.sort.last[0] %>
  <% end %>

  </Say>

  <Gather numDigits="1" method="GET" action="<%= phone_delivery_path(@parent.deliveries.unsuccessful.first) %>">
    <Say>To hear your new <%= @parent.deliveries.unsuccessful.count > 1 ? "updaes" : "update" %>, press 1</Say>
  </Gather>
<% else %>
  <Say>You have no new updates.</Say>
  <Pause length="1" />
  <Say>Thank you, and good bye</Say>
  <Hangup />
<% end %>