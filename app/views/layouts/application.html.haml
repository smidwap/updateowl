!!!
%html
  %head
    %meta{:charset => "utf-8"}

    %title= content_for?(:title) ? yield(:title) : "Update Me"

    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1.0"}
    %meta{:name => "description", :content => ""}
      
    = stylesheet_link_tag "application", :media => "all"

    /[if lt IE 9]
      %script{:src => "https://html5shim.googlecode.com/svn/trunk/html5.js", :type => "text/javascript"}
    
    = csrf_meta_tags

    = yield(:head)

  %body
    %header.container.top_bar
      .right_bar
        %nav
          = link_to "Account", "#"
          = link_to "Logout", destroy_user_session_path, method: :delete
        #global_search
          = text_field_tag("autocomplete", nil, data: {behavior: "autocomplete autocomplete_selectable_link", source: global_autocomplete_data_for_students(current_user.students)}, placeholder: "Jump to a student...")
    .container#inner
      %nav.inner_nav
        = link_to select_user_students_path(current_user), remote: true, class: "nav_new_update" do
          %i.icon-plus-sign
          New Update
        = link_to "Recent Activity", root_path, class: "nav_recent_activity"
        = link_to "Archive", user_messages_path(current_user), class: "nav_updates"
        = link_to "Students", user_students_path(current_user), class: "nav_students"
      .row
        .span8
          .main
            .alert_container
            = yield
        .span4
          .aside
            = yield(:aside)

  :javascript
    window.App = {}
  = javascript_include_tag "application"