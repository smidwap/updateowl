<Say><%= t 'parental.phone.hello', school: @parent.school.name %></Say>

<% if @parent.deliveries.unchecked.count > 0 %>
  <Say><%= t 'parental.phone.unchecked', count: @parent.deliveries.unchecked.count %>
  </Say>

  <Gather numDigits="1" method="GET" action="<%= parental_phone_delivery_path(@parent.deliveries.unchecked.first) %>">
    <Say><%= t 'parental.phone.listen', count: @parent.deliveries.unchecked.count %></Say>
  </Gather>
<% else %>
  <Say><%= t 'parental.phone.no_new_updates' %></Say>
  <Pause length="1" />
  <Say><%= t 'parental.phone.goodbye' %></Say>
  <Hangup />
<% end %>