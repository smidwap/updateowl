<% content_for :options do %>
  <%= say do %><%= t 'parental.phone.menu.repeat' %><% end %>

  <% if delivery.next_delivery? %>
  <%= say do %><%= t 'parental.phone.menu.next' %><% end %>
  <% else %>
  <%= say do %><%= t 'parental.phone.menu.otherwise' %><% end %>
  <% end %>

  <% if delivery.parent.spanish_speaking? %>
    <%= say do %><%= t 'parental.phone.menu.translation_feedback' %><% end %>
  <% end %>
<% end %>

<Gather numDigits="1" method="GET" action="<%= route_parental_phone_delivery_path(delivery) %>" timeout="20">
  <%= yield :options %>
  <Pause length="8" />
  <%= yield :options %>
</Gather>