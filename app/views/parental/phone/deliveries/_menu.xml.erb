<% content_for :options do %>
  <Say><%= t 'parental.phone.repeat' %></Say>

  <% if delivery.next_delivery? %>
  <Say><%= t 'parental.phone.next' %></Say>
  <% else %>
  <Say><%= t 'parental.phone.otherwise' %></Say>
  <% end %>
<% end %>

<Gather numDigits="1" method="GET" action="<%= route_parental_phone_delivery_path(delivery) %>" timeout="20">
  <%= yield :options %>
  <Pause length="8" />
  <%= yield :options %>
</Gather>