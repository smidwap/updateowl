<%= t 'parental.email.notification',
    teacher: @delivery.message.user.professional_name,
    student: @delivery.student.first_name %>

<% if @num_other_deliveries == 1 %>
<%= t 'parental.email.one_other_delivery' %>
<% elsif @num_other_deliveries > 1 %>
<%= t 'parental.email.multiple_other_deliveries', num_other_deliveries: @num_other_deliveries %>
<% end %>

<%= t 'parental.email.click_to_access' %> <%= parental_web_deliveries_url(c: @unchecked_deliveries.map(&:access_code)) %>