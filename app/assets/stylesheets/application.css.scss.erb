/* Insert any bootstrap overrides -here- before the bootstrap @import */
$baseFontSize: 14px;
$navbarSearchPlaceholderColor: #999;

@import "variables";
@import "bootstrap";
@import "mixins";

body {
  background: #FDF9F2;
  padding-top: 70px;
  padding-bottom: 20px;
}


//
// Global Nav
//
body > header {
  position: fixed;
  top: 0;
  width: 100%;
  background: #fff;
  border-bottom: 1px solid #ccc;

  a.brand, ul.main_menu, .search {
    float: left;
    line-height: 50px;
  }

  ul.personal_menu {
    float: right;
  }

  a.brand {
    line-height: 50px;
    color: #666;
    font-size: 24px;
    padding: 0 20px;
    text-decoration: none;
  }

  ul.menu {
    margin-bottom: 0;

    > li {
      float: left;

      > a {
        display: inline-block;
        line-height: 50px;
        text-align: center;
        text-decoration: none;
      }

      &.dropdown {
        b.caret {
          margin-top: 22px;
          opacity: 1.0;
        }

        &:hover b.caret {
          opacity: 0.3;
        }
      }
    }
  }

  ul.main_menu {
    > li {
      border-right: 1px solid #ccc;

      &:first-child {
        border-left: 1px solid #ccc;
      }

      > a {
        padding: 0 20px;
        font-weight: bold;

        &.new_update {
          color: $green;
        }

        &:hover {
          background: $grayLighter;
        }
      }
    }
  }

  .search {
    padding-left: 50px;

    input {
      @include border-radius(10px);
      padding-left: 10px;
      margin-top: 4px;
    }
  }

  ul.personal_menu {
    > li {
      > a {
        padding: 0 10px;
        color: #333;
      }

      &.dropdown {
        > a:hover {
          background: $grayLighter;
        }

        > ul.dropdown-menu {
          left: -135px;
        }
      }
    }
  }
}

//
// Main Container
//
.container#inner {
  padding: 20px;
  border: 1px solid #ccc;
  @include border-radius(2px);
  @include box-shadow(0 0 6px #ccc);
  background: #fff;
}

.container#inner {
  .main {
    margin-right: 40px;
  }
}

//
// Global styles
//
.call_to_action {
  padding: 10px;
  background: $red;
  color: $grayLighter;
  @include border-radius($standardRadius);

  header {
    margin-bottom: 10px;
  }

  a {
    color: #fff;
    text-decoration: underline;
  }
}

.sidebox {
  > header {
    padding: 5px 5px 5px 15px;
    background: $grayLighter;
    font-weight: bold;
    @include border-radius($standardRadius $standardRadius);
  }

  > .sidebox_body {
    padding: 15px;
  }
}

.stats {
  @include clearfix();

  &.three > .stat_container {
    width: 33%;
  }

  &.two > .stat_container {
    width: 50%;
  }

  > .stat_container {
    float: left;

    > .stat {
      padding: 5px;
      border-bottom: 1px solid $grayLighter;
      border-right: 1px solid $grayLighter;
      text-align: center;

      > .number {
        font-size: 30px;
        font-weight: bold;
      }

      > .description {
        margin-top: 8px;
        font-size: 10px;
        color: $grayLight;
      }
    }

    &:last-child > .stat {
      border-right: none;
    }
  }
}

section {
  margin-bottom: 20px;

  > header {
    @include clearfix();
    margin-bottom: 10px;

    h3 {
      font-size: 16px;
      margin-bottom: 0;
      color: $red;
      font-weight: normal;
    }

    .inline_navigation_container {
      h3 {
        float: left;
      }
    }
  }
}

.modal {
  .modal-header {
    @include clearfix();

    h3 {
      font-weight: normal;
      float: left;
    }
  }

  p.next_steps {
    text-align: center;
  }
}

form {
  .choices {
    font-size: 12px;
  }

  .field_with_errors {
    display: inline;
  }
}

.circle_icon {
  display: inline-block;
  @include circle(11px);
  text-align: center;

  &.green {
    background: $green;
  }

  i {
    margin-top: 1px;
  }
}

.circle_icon_nav {
  margin-top: 2px;
  margin-left: 10px;
  float: left;
  font-size: 12px;
  opacity: 0.5;

  a {
    text-decoration: none;

    span {
      margin-left: 5px;
      visibility: hidden;
    }
  }

  &:hover {
    opacity: 1.0;

    .circle_icon {
      background: $grayLighter;
    }

    span {
      visibility: visible;
    }
  }
}

input.fat_input {
  height: 30px;
  font-size: 16px;
  padding-left: 9px;
}