/* Insert any bootstrap overrides -here- before the bootstrap @import */
$baseFontSize: 14px;

@import "variables";
@import "bootstrap";
@import "mixins";

body {
  background: url(<%= image_path('ricepaper.png') %>);
}

.container#outer {
  margin-top: 20px;
  width: 982px;

  .container#inner {
    padding: 20px;
    border: 1px solid $grayLighter;
    @include border-radius($standardRadius);
    @include box-shadow(0 0 4px #666);
    background: #fff;
  }
}

.container#inner {
  .main {
    margin-right: 20px;
  }
}

nav.top_nav {
  margin-bottom: 25px;

  a {
    margin-right: 10px;
    color: $gray;
    opacity: 0.6;
    text-shadow: #fff 0 1px;

    &.nav_new_update {
      font-weight: bold;
      padding-right: 10px;
      border-right: 1px solid #ccc;
    }
  }

  &:hover {
    a {
      opacity: 1.0;
    }
  }
}

.call_to_action {
  padding: 10px;
  background: $red;
  color: $grayLighter;
  @include border-radius(6px);

  header {
    margin-bottom: 10px;
  }
}

.sidebox {
  > header {
    padding: 5px 5px 5px 15px;
    background: $grayLighter;
    //text-align: center;
    font-weight: bold;
    //border-top: 1px solid $grayLight;
    @include border-radius($standardRadius $standardRadius);
  }

  > .sidebox_body {
    padding: 15px;
  }
}

.stats {
  @include clearfix();

  &.three > .stat_container {
    width: 33%;
  }

  &.two > .stat_container {
    width: 50%;
  }

  > .stat_container {
    float: left;

    > .stat {
      padding: 5px;
      border-bottom: 1px solid $grayLighter;
      border-right: 1px solid $grayLighter;
      text-align: center;

      > .number {
        font-size: 24px;
      }

      > .description {
        margin-top: 8px;
        font-size: 10px;
        color: $grayLight;
      }
    }

    &:last-child > .stat {
      border-right: none;
    }
  }
}

section > header {
  font-size: 16px;
  color: $red;
  margin-bottom: 10px;
}

.modal {
  p.next_steps {
    text-align: center;
  }
}

form {
  .choices {
    font-size: 12px;
  }
}

.circle_icon {
  @include circle(11px);
  text-align: center;

  &.green {
    background: $green;
  }
}