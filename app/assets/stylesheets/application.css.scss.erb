/* Insert any bootstrap overrides -here- before the bootstrap @import */
$baseFontSize: 14px;

@import "variables";
@import "bootstrap";
@import "mixins";

body {
  background: url(<%= image_path('ricepaper.png') %>);
  padding-top: 20px;
  padding-bottom: 20px;
}

header.top_bar {
  width: 982px;
  margin-bottom: 20px;

  .logo {
    float: left;
  }

  .right_bar {
    float: right;

    nav {
      text-align: right;
      margin-bottom: 5px;

      a {
        color: $textColor;
        font-size: 12px;

        &:not(:last-child) {
          margin-right: 10px;
        }
      }
    }

    #global_search {
      input {
        width: 250px;
        height: 25px;
        padding-left: 8px;
      }
    }
  }
}

.container#inner {
  padding: 20px;
  border: 1px solid $grayLighter;
  @include border-radius($standardRadius);
  @include box-shadow(0 0 4px #666);
  background: #fff;
}

.container#inner {
  .main {
    margin-right: 40px;
  }
}

nav.inner_nav {
  margin-bottom: 25px;

  a {
    margin-right: 15px;
    color: #000;
    opacity: 0.4;
    text-shadow: #fff 0 1px;

    &.nav_new_update {
      font-weight: bold;
      padding-right: 15px;
      border-right: 1px solid #ccc;

      i {
        margin-top: 2px;
      }
    }
  }

  &:hover {
    a {
      opacity: 0.7;
      text-decoration: none;

      &:hover {
        opacity: 1.0;
      }
    }
  }
}

.call_to_action {
  padding: 10px;
  background: $red;
  color: $grayLighter;
  @include border-radius($standardRadius);

  header {
    margin-bottom: 10px;
  }

  a {
    color: #fff;
    text-decoration: underline;
  }
}

.sidebox {
  > header {
    padding: 5px 5px 5px 15px;
    background: $grayLighter;
    //text-align: center;
    font-weight: bold;
    //border-top: 1px solid $grayLight;
    @include border-radius($standardRadius $standardRadius);
  }

  > .sidebox_body {
    padding: 15px;
  }
}

.stats {
  @include clearfix();

  &.three > .stat_container {
    width: 33%;
  }

  &.two > .stat_container {
    width: 50%;
  }

  > .stat_container {
    float: left;

    > .stat {
      padding: 5px;
      border-bottom: 1px solid $grayLighter;
      border-right: 1px solid $grayLighter;
      text-align: center;

      > .number {
        font-size: 24px;
      }

      > .description {
        margin-top: 8px;
        font-size: 10px;
        color: $grayLight;
      }
    }

    &:last-child > .stat {
      border-right: none;
    }
  }
}

section > header {
  @include clearfix();
  
  h3 {
    float: left;
    font-size: 16px;
    color: $red;
    margin-bottom: 10px;
    font-weight: normal;
  }
}

.modal {
  .modal-header {
    @include clearfix();

    h3 {
      font-weight: normal;
      float: left;
    }
  }

  p.next_steps {
    text-align: center;
  }
}

form {
  .choices {
    font-size: 12px;
  }

  .field_with_errors {
    display: inline;
  }
}

.circle_icon {
  display: inline-block;
  @include circle(11px);
  text-align: center;

  &.green {
    background: $green;
  }
}

table.table > tbody {
  > tr {
    > td {
      border: none;

      &:first-child {
        padding-left: 0;
      }
    }

    &:hover {
      > td {
        background: none;
      }
    }
  }
}

.circle_icon_nav {
  margin-top: 2px;
  margin-left: 10px;
  float: left;
  font-size: 12px;
  opacity: 0.5;

  a {
    text-decoration: none;

    span {
      margin-left: 5px;
      visibility: hidden;
    }
  }

  &:hover {
    opacity: 1.0;

    .circle_icon {
      background: $grayLighter;
    }

    span {
      visibility: visible;
    }
  }
}

input.fat_input {
  height: 30px;
  width: 250px;
  font-size: 16px;
  padding-left: 9px;
}